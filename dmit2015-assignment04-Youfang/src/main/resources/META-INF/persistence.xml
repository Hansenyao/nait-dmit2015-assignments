<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

        <persistence-unit name="oracle-jpa-co-pu" transaction-type="JTA">
            <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
            <jta-data-source>java:app/datasources/OracleCoDS</jta-data-source>

            <class>dmit2015.entity.Customer</class>
            <class>dmit2015.entity.Inventory</class>
            <class>dmit2015.entity.Order</class>
            <class>dmit2015.entity.OrderItem</class>
            <class>dmit2015.entity.OrderItemId</class>
            <class>dmit2015.entity.Product</class>
            <class>dmit2015.entity.Shipment</class>
            <class>dmit2015.entity.Store</class>

            <properties>
                <property name="hibernate.type.preferred_instant_jdbc_type" value="TIMESTAMP"/>
            </properties>
        </persistence-unit>
</persistence>